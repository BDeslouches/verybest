<!-- Validation failure messages -->
<% if @dish.errors.any? %>
  <% @dish.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Dish</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_dish" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for location -->
      <div class="form-group">
        <label for="location" class="control-label">
          Location
        </label>

        <input type="text" id="location" name="location" placeholder="Location" class="form-control" value="<%= @dish.location %>">
      </div>

      <!-- Label and input for date_tried -->
      <div class="form-group">
        <label for="date_tried" class="control-label">
          Date tried
        </label>

        <input type="text" id="date_tried" name="date_tried" placeholder="Date tried" class="form-control" value="<%= @dish.date_tried %>">
      </div>

      <button class="btn btn-success">
        Create Dish
      </button>
      or
      <a href="/dishes">Cancel</a>
    </form>
  </div>
</div>
