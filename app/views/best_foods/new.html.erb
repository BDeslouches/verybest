<!-- Validation failure messages -->
<% if @best_food.errors.any? %>
  <% @best_food.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Best Food</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_best_food" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for dish_id -->
      <div class="form-group">
        <label for="dish_id" class="control-label">
          Dish
        </label>

        <input type="text" id="dish_id" name="dish_id" placeholder="Dish" class="form-control" value="<%= @best_food.dish_id %>">
      </div>

      <!-- Label and input for venue_id -->
      <div class="form-group">
        <label for="venue_id" class="control-label">
          Venue
        </label>

        <input type="text" id="venue_id" name="venue_id" placeholder="Venue" class="form-control" value="<%= @best_food.venue_id %>">
      </div>

      <!-- Label and input for isbest -->
      <div class="checkbox">
        <label for="isbest">
          <input type="checkbox" id="isbest" name="isbest" value="1" <%= "checked" if @best_food.isbest %>>
          Isbest
        </label>
      </div>

      <button class="btn btn-success">
        Create Best Food
      </button>
      or
      <a href="/best_foods">Cancel</a>
    </form>
  </div>
</div>
